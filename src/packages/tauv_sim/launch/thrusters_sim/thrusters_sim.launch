<launch>
    <arg name="model_name" default="kingfisher"/>
    <arg name="config_pkg" default="$(eval find(arg('model_name') + '_sim_description'))"/>

    <node pkg="tauv_sim" type="thrusters_sim" name="thrusters_sim" output="screen">
        <rosparam command="load" file="$(arg config_pkg)/thrusters.yaml" />
        <remap from="wrench" to="/thrusters/wrench" />
        <remap from="arm" to="/thrusters/arm" />
    </node>
</launch>
