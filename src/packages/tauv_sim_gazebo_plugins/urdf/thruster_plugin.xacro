<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
   <xacro:macro name="t200_thruster"
      params="namespace
              thruster_id
              *origin">
      <joint name="${namespace}/thruster_${thruster_id}_joint" type="continuous">
         <xacro:insert_block name="origin"/>
         <axis xyz="1 0 0"/>
         <parent link="${namespace}/base_link"/>
         <child link="${namespace}/thruster_${thruster_id}"/>
      </joint>

      <link name="${namespace}/thruster_${thruster_id}">
         <xacro:no_inertial/>
         <xacro:no_visual/>
         <xacro:no_collision/>
      </link>

      <gazebo>
         <plugin name="${namespace}_thruster_${thruster_id}" filename="libtauv_thruster_plugin.so">
            <linkName>${namespace}/thruster_${thruster_id}</linkName>
            <timeConstant>0.1</timeConstant>
            <publishRate>50</publishRate>
            <nodeName>${namespace}_thruster_${thruster_id}_plugin</nodeName>
            <targetThrustTopic>/${namespace}/thrusters/${thruster_id}/target_thrust</targetThrustTopic>
            <thrustTopic>/${namespace}/thrusters/${thruster_id}/thrust</thrustTopic>
         </plugin>
      </gazebo>

      <gazebo reference="${namespace}/thruster_${thruster_id}">
         <selfCollide>false</selfCollide>
      </gazebo>
   </xacro:macro>
</robot>
