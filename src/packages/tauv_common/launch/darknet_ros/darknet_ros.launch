<?xml version="1.0" encoding="utf-8"?>

<launch>
  <!-- Console launch prefix -->
  <arg name="launch_prefix" default=""/>
  <arg name="image" default="/camera/rgb/image_raw" />
  <arg name="model_name" default="kingfisher"/>
  <arg name="config_pkg" default="$(eval find(arg('model_name') + '_description'))"/>

  <!-- Config and weights folder. -->
  <arg name="yolo_weights_path"          default="/shared/weights"/>
  <arg name="yolo_config_path"           default="$(arg config_pkg)/yolo_config"/>

  <!-- ROS and network parameter files -->
  <arg name="ros_param_file"             default="$(arg config_pkg)/darknet_config/ros.yaml"/>
  <arg name="network_param_file"         default="$(arg config_pkg)/darknet_config/yolov3.yaml"/>

  <!-- Load parameters -->
  <rosparam command="load" ns="darknet_ros" file="$(arg ros_param_file)"/>
  <rosparam command="load" ns="darknet_ros" file="$(arg network_param_file)"/>

  <!-- Start darknet and ros wrapper -->
  <node pkg="darknet_ros" type="darknet_ros" name="darknet_ros" output="screen" launch-prefix="$(arg launch_prefix)">
    <param name="weights_path"          value="$(arg yolo_weights_path)" />
    <param name="config_path"           value="$(arg yolo_config_path)" />
    <remap from="camera/rgb/image_raw"  to="$(arg image)" />
  </node>

 <!--<node name="republish" type="republish" pkg="image_transport" output="screen" 	args="compressed in:=/front_camera/image_raw raw out:=/camera/image_raw" /> -->
</launch>
