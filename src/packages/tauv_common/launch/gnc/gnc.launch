<!--            <remap from="wrench" to="/$(arg model_name)/thruster_manager/input_stamped"/>-->
<!--        </node>-->

        <!-- Load USB joystick controller configs -->
<!--        <rosparam file="$(find tauv_common)/src/planners/teleop_planner/joy.yaml" command="load"/>-->

        <!-- Start Teleop node -->
