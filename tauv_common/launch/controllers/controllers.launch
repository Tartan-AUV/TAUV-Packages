<launch>
    <arg name="model_name" default="manta"/>
    <arg name="config_pkg" default="$(eval find(arg('model_name') + '_description'))"/>

    <arg name="controller_configs" default="$(arg config_pkg)/controllers.yaml"/>

    <group ns="$(arg model_name)/controllers">
        <rosparam file="$(arg controller_configs)" command="load" ns="configs"/>

        <node name="keyboard_controller" pkg="tauv_common" type="keyboard_controller" output="screen">
            <param name="output_frame" value="$(arg model_name)/base_link"/>
        </node>
        <node name="control_aggregator" pkg="tauv_common" type="control_aggregator" output="screen"/>

    </group>

</launch>